<div class="container my-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1>All flats</h1>
    <%= link_to "New flat", new_flat_path, class: "btn btn-primary" %>
  </div>

  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-12 col-md-6 col-lg-4 mb-4">
        <div class="card h-100">
          <div class="card-body">
            <h5 class="card-title mb-1"><i class="fa-solid fa-house"></i> <%= flat.name %></h5>
            <p class="text-muted mb-2"><i class="fa-solid fa-location-dot"></i> <%= flat.address %></p>
            <p class="mb-2"><%= truncate(flat.description, length: 100) %></p>
            <p class="mb-0">
              <i class="fa-solid fa-user-group"></i> <%= flat.number_of_guests %> guests Â·
              <i class="fa-solid fa-euro-sign"></i> <%= flat.price_per_night %> / night
            </p>
          </div>
          <div class="card-footer bg-white d-flex gap-2">
            <%= link_to "Details", flat_path(flat), class: "btn btn-outline-secondary btn-sm" %>
            <%= link_to "Edit", edit_flat_path(flat), class: "btn btn-outline-secondary btn-sm" %>
            <%= link_to "Delete", flat_path(flat),
                        data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                        class: "btn btn-danger btn-sm" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
