<div class="container my-4">
  <div class="d-flex justify-content-between align-items-center mb-3">
    <h1><%= @flat.name %></h1>
    <div>
      <%= link_to "Edit", edit_flat_path(@flat), class: "btn btn-outline-secondary" %>
      <%= link_to "Delete", flat_path(@flat),
                  data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
                  class: "btn btn-danger" %>
      <%= link_to "Back", flats_path, class: "btn btn-link" %>
    </div>
  </div>

  <p class="text-muted"><i class="fa-solid fa-location-dot"></i> <%= @flat.address %></p>
  <p><%= simple_format(@flat.description) %></p>
  <p class="mb-0">
    <i class="fa-solid fa-user-group"></i> <%= @flat.number_of_guests %> guests Â·
    <i class="fa-solid fa-euro-sign"></i> <%= @flat.price_per_night %> / night
  </p>
</div>
